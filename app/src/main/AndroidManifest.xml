<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zistone.blecontrol">

    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" /> <!-- 允许装载卸载文件 -->
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" /> <!-- 修改系统设置 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 开机自启动 -->
    <!-- 允许安装未知应用 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" /> <!-- 请求安装第三方APK -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动提示 -->
    <!--
    以下权限用于开启摄像头
    required="false":如果用户设备上没有这个类库,不允许应用安装在这个设备上
    required="true":如果这个类库存在,则应用程序能够使用这个类库,也可以设计成没有这个类库应用程序也可以工作
    -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!--
    以下权限用于访问GPS定位
     -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="andriod.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!--  从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 访问网络状态,主要用于监视网络连接 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- Wifi状态 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" /> <!-- 修改声音设置 -->

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="stateAlwaysHidden">
        <activity
            android:name=".activity.FaceIdCompareActivity"
            android:label="1：1人证比对">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baidu.idl.face.main.activity.FaceDepthLivenessActivity"
            android:label="RGB+Depth检测页面（活体+非活体）" />
        <activity
            android:name="com.baidu.idl.face.main.activity.FaceIRLivenessActivity"
            android:label="RGB+IR检测页面（活体+非活体）" />
        <activity
            android:name="com.baidu.idl.face.main.activity.FaceRGBDetectActivity"
            android:label="不检测活体" />
        <activity
            android:name="com.baidu.idl.face.main.activity.PicoFaceDepthLivenessActivity"
            android:label="RGB+Depth检测页面（活体+非活体）" />
        <activity
            android:name=".activity.StationSetting"
            android:label="基站设置" />
        <activity
            android:name=".activity.Location"
            android:label="设备定位" />
        <activity
            android:name=".activity.MyAnimation"
            android:label="动画界面" />
        <activity
            android:name=".activity.TemperatureMeasure"
            android:label="体温测量" />
        <activity
            android:name=".activity.MaterialsInDB"
            android:label="物料绑定" />
        <activity
            android:name=".activity.CommandTest"
            android:label="指令测试" />
        <activity
            android:name=".activity.PowerControl"
            android:label="电力控制" />
        <activity
            android:name=".activity.DeviceList"
            android:label="低功耗蓝牙设备列表"></activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="这个Activity没用到" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider> <!-- 7.0之后禁止在应用外部公开file://URI，这里使用FileProvider类临时访授权 -->

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="ahC8ymAA5K3VojudS6hm7YBQq6CzKOhQ" /> <!-- 百度地图AK鉴权 -->
    </application>

</manifest>