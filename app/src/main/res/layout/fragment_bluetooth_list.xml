<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_bluetooth_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bluetoothList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/btn1_bluetoothList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="SCAN"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/title_bluetooth_control"
            android:textColor="@color/white"
            android:textSize="28sp" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="UUID："
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroup1_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton1_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlueNRG"
                    android:textColor="@color/gray" />

                <RadioButton
                    android:id="@+id/radioButton2_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amdtp"
                    android:textColor="@color/gray" />

                <RadioButton
                    android:id="@+id/radioButton5_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="OTA"
                    android:textColor="@color/gray" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Function："
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radioGroup2_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton3_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Power Control"
                    android:textColor="@color/gray" />

                <RadioButton
                    android:id="@+id/radioButton4_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Command Test"
                    android:textColor="@color/gray" />
            </RadioGroup>
        </LinearLayout>

        <TableLayout
            android:id="@+id/table_bluetoothList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv1_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="No Filter" />

                <ImageButton
                    android:id="@+id/btnUpDown_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/down1" />

                <ImageButton
                    android:id="@+id/btnClearFilter_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/close1" />

            </TableRow>

            <TableRow
                android:id="@+id/row1_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/device_name1" />

                <EditText
                    android:id="@+id/editName_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Fileter by name"
                    android:inputType="textPostalAddress" />

                <ImageButton
                    android:id="@+id/btnClearName_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/close1" />
            </TableRow>

            <TableRow
                android:id="@+id/row2_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/device_address1" />

                <EditText
                    android:id="@+id/editAddress_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Filter by address"
                    android:inputType="textPostalAddress" />

                <ImageButton
                    android:id="@+id/btnClearAddress_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/close1" />
            </TableRow>

            <TableRow
                android:id="@+id/row3_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rssi2" />

                <SeekBar
                    android:id="@+id/seekBar_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvRssi_bluetoothList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="-100dBm" />
            </TableRow>
        </TableLayout>

        <com.zistone.material_refresh_layout.MaterialRefreshLayout
            android:id="@+id/refresh_bluetoothList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lv_bluetoothList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.zistone.material_refresh_layout.MaterialRefreshLayout>

    </LinearLayout>
</LinearLayout>