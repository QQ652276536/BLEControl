<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><!--选中时候的样式-->
        <shape>
            <solid android:color="@color/skyblue"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="true"><!--可用时候的样式-->
        <shape>
            <solid android:color="@color/material_blue"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
    <item android:state_enabled="false"><!--禁用时候的样式-->
        <shape>
            <solid android:color="@color/gray"></solid>
            <corners android:radius="10dp"></corners>
        </shape>
    </item>
</selector>