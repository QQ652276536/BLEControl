<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            //边框线宽度、边框线颜色
            <stroke
                android:width="1dp"
                android:color="#D5D5D5" />
            <corners android:radius="10dp" />
            //圆角度数、背景颜色
            <solid android:color="#ffffff" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/down1" />
    </item>
</layer-list>
