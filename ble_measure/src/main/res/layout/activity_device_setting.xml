<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent">

        <ImageButton
            android:id="@+id/btn_return_setting"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/btn_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="终端设置"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_version_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/springGreen"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/springGreen"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="电池电量："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_battery_setting"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/springGreen"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号强度："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_rssi_setting"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@color/springGreen"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="IP地址："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_ip_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="7"
                android:inputType="textEmailSubject"
                android:text="---"
                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="端口："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_port_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="7"
                android:inputType="number"
                android:text="---"
                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_ip_port_setting"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_gravity="center_vertical"
            android:background="@color/springGreen"
            android:text="设置"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI名称："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_wifi_name_setting"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <Button
                android:id="@+id/btn_wifi_name_setting"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:background="@color/springGreen"
                android:text="设置"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI密码："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_wifi_pwd_setting"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <Button
                android:id="@+id/btn_wifi_pwd_setting"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:background="@color/springGreen"
                android:text="设置"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="上报事件间隔（秒）："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_up_interval_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="4"
                android:inputType="number"
                android:text="---"
                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工作时长（秒）："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_work_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ems="4"
                android:inputType="number"
                android:text="---"
                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_up_setting"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_gravity="center_vertical"
            android:background="@color/springGreen"
            android:text="设置"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日上报起始时间："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_hour_up_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_minute_up_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_second_up_time_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                android:text="---"
                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_up_start_setting"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:background="@color/springGreen"
            android:text="设置"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginTop="10sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="传感器采样间隔："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_collect_interval_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次数："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_collect_count_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number"
                android:text="---"

                android:textColor="@color/springGreen"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_collect_setting"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:background="@color/springGreen"
            android:text="设置"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_off_setting"
                android:layout_width="130sp"
                android:layout_height="30sp"
                android:background="@color/springGreen"
                android:text="设备关机"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_restart_setting"
                android:layout_width="130sp"
                android:layout_height="30sp"
                android:layout_marginStart="40sp"
                android:background="@color/springGreen"
                android:text="设备重启"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_debug_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:background="@color/colorAccent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_top_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40sp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/top" />

                <ImageButton
                    android:id="@+id/btn_bottom_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40sp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/bottom" />

                <ImageButton
                    android:id="@+id/btn_clear_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40sp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/clear" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_debug_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>